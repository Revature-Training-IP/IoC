<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Example bean definition -->
    <bean id = "messageService" class = "com.revature.spring.ioc.MessageService">
        <constructor-arg value = "Hello from Spring Configuration"/>
    </bean>

    <bean id = "messageService1" class = "com.revature.spring.ioc.MessageService">
        <property name = "message" value = "Hello from Spring Configuration using setter"/>
    </bean>

</beans>